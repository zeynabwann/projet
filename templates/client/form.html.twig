{% extends 'base.html.twig' %}

{% block main %}

	<div class="container mx-auto p-4">
		<div class="card bg-white shadow-lg rounded-lg">

			<div class="card-header bg-blue-500 text-white px-4 py-2 font-semibold">Enregistrement d'un client</div>
			<div class="card-body p-6">

				{{ form_start(formClient)}}
				<div class="mb-4">
					{{ form_label(formClient.surname)(form.photo) }}
					{{ form_widget(formClient.surname)(form.photo) }}
					{{ form_errors(formClient.surname,)(form.photo) }}
				</div>
				<div class="mb-4">
					{{ form_label(formClient.telephone)(form.photo)}}
 					{{ form_widget(formClient.telephone)(form.photo) {}}}
					{{ form_errors(formClient.telephone)(form.photo)}}
				</div>

				<div class="mb-4">
					{{ form_label(formClient.adresse)(form.photo) }}
					{{ form_widget(formClient.adresse)(form.photo) }}
					{{ form_errors(formClient.adresse)(form.photo) }}
				</div>

				<div class="mb-4">
					{{ form_label(formClient.addUser, ) }}
					{{ form_widget(formClient.addUser)  }}
				</div>

				<div id="client_users">
					<div class="form-group row mt-2 mb-4">
						<label class="block text-sm font-medium text-gray-700">Nom</label>
						<div class="mt-1">
							{{ form_widget(formClient.user.nom)}}
						</div>
						<div class="text-red-500 text-xs mt-1">
							{% if errorsUser[0] is defined %}
								{{ errorsUser[0].getMessage()}}
							{% endif %}
						</div>
					</div>

					<div class="form-group row mt-0 mb-4">
						<label class="block text-sm font-medium text-gray-700">Prenom</label>
						<div class="mt-1">
							{{ form_widget(formClient.user.prenom) }}
						</div>
						<div class="text-red-500 text-xs mt-1">
							{% if errorsUser[1] is defined %}
								{{ errorsUser[1].getMessage() }}
							{% endif %}
						</div>
					</div>

					<div class="form-group row mt-2 mb-4">
						<label class="block text-sm font-medium text-gray-700">Login</label>
						<div class="mt-1">
							{{ form_widget(formClient.user.login) }}
						</div>
						<div class="text-red-500 ">
							{% if errorsUser[2] is defined %}
								{{ errorsUser[2].getMessage() }}
							{% endif %}
						</div>
					</div>

					<div class="form-group row mt-2 mb-4">
						<label class="block text-sm font-medium text-gray-700">Password</label>
						<div class="mt-1">
							{{ form_widget(formClient.user.password)  }}
						</div>
						<div class="text-red-500 text-xs mt-1">
							{% if errorsUser[3] is defined %}
								{{ errorsUser[3].getMessage() }}
							{% endif %}
						</div>
					</div>
				</div>

				<div class="mt-4">
					<button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 ">Enregistrer</button>
				</div>

				{{ form_end(formClient) }}

			</div>
		</div>
	</div>

	{% block myScript %}
		<script src="{{ asset('controllers/form_client.js') }}"></script>
	{% endblock %}
{% endblock %}
